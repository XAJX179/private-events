<h1>Events</h1>

<% if current_user %>
  <p>
    <%= link_to "Attending events", users_show_path %>
  </p>
<% end %>
<% if current_user %>
  <%= link_to "New post", new_event_path %>
<% else %>
  <p>
    Sign up / Log in to view or create events
  </p>
<% end %>

<% if current_user %>
  <h2>Events (upcoming):</h2>
  <% @events.upcoming.each do |event| %>
    <div class="event">
      <div class="name">
        <p>
          Event name:
          <%= event.name %>
        </p>
      </div>
      <div class="creator">
        <p>
          By :
          <% if current_user %>
            <%= event.creator.name %>
          <% else %>
            Anonymous user
          <% end %>
        </p>
      </div>
      <div class="show_link">
        <%= link_to "Show", event_path(event) %>
      </div>
    </div>
  <% end %>

  <h2>Events (past):</h2>

  <% @events.past.each do |event| %>
    <div class="event">
      <div class="name">
        <p>
          Event name:
          <%= event.name %>
        </p>
      </div>
      <div class="creator">
        <p>
          By :
          <% if current_user %>
            <%= event.creator.name %>
          <% else %>
            Anonymous user
          <% end %>
        </p>
      </div>
      <div class="show_link">
        <%= link_to "Show", event_path(event) %>
      </div>
    </div>
  <% end %>
<% end %>
